CREATE TABLE STU(SNO VARCHAR(3) not NULL,SNAME VARCHAR(4) NOT NULL,SSEX VARCHAR(2) NOT null,
SBIRTHDAY DATE,CLASS VARCHAR(5));
CREATE TABLE COR(CNO VARCHAR(5) NOT null,CNAME VARCHAR(10) not NULL,TNO VARCHAR(10) NOT null);
CREATE TABLE SC(SNO VARCHAR(3) NOT NULL,CNO VARCHAR(5) NOT NULL,DGREE NUMERIC(10,1) NOT NULL);
CREATE TABLE TEA(TNO VARCHAR(3)not NULL,TNAME VARCHAR(4)NOT NULL,TSEX VARCHAR(2) NOT NULL,
TBIRTHDAY DATE NOT NULL,PROF VARCHAR(6),DEPART VARCHAR(10) NOT NULL);
